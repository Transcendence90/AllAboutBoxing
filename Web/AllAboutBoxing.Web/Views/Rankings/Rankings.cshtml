@model AllAboutBoxing.Web.ViewModels.Rankings.RankigsListViewModel

@{
    this.ViewData["Title"] = "Rankings";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>

<hr />

@foreach (var rank in Model.Rankings)
{
    <div class="col-md-5 rounded mx-auto d-block">
        @if (rank.Rank == 1)
        {
            <h3 class="text-center bg-danger">@rank.DivisionName</h3>

        }
        <div class="text-center">
            <p class="font-weight-bold "><span>@rank.Rank<span>.</span></span> @rank.BoxerName</p>
        </div>
    </div>
}




