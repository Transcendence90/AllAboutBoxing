@using AllAboutBoxing.Common
@model AllAboutBoxing.Web.ViewModels.Home.IndexViewModel

@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>We have:</p>
    <div class=" col-md-4 offset-4">
        <ul class="list-group">
            <li class="list-group-item bg-danger">Countries: @Model.CountriesCount</li>
            <li class="list-group-item bg-danger">Weight classes: @Model.WeightClassesCount</li>
            <li class="list-group-item bg-danger">Boxers: @Model.BoxersCount</li>
        </ul>
    </div>
</div>
